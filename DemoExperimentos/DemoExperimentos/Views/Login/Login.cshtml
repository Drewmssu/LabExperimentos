@model DemoExperimentos.ViewModels.Login.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h3 class="text-center">Ingresar</h3>

<div class="col-lg-offset-5">
    <div class="row">
        <div class="clearfix"></div>
        <br />
        <form class="form-horizontal" method="post">
            <div class="form-group">
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(x => x.Username, new { @id = "username", @class = "form-control", @placeholder = "Usuario" })
                @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @id = "password", @class = "form-control", @placeholder = "Contraseña", @type = "password" })
            </div>
            <div class="form-group">
                <button id="login-button" type="submit" class="btn btn-primary"> Iniciar Sesión</button>
            </div>
        </form>
    </div>
</div>

