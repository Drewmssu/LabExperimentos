@model DemoExperimentos.ViewModels.Teacher.ListDocenteViewModel
@{
    ViewBag.Title = "ListDocente";
}

<div class="col-md-12">
    <br />
    <div id="filtro">
        <form class="form-horizontal" action="@Url.Action("ListDocente", "Teacher", new { Filtro = Model.Filtro })">
            <div class="form-group">
                <label>Filtrar por Apellido</label>
                @Html.TextBoxFor(x => x.Filtro, new { @id = "filtrado", @class = "form-control" })
            </div>
            <div class="form-group">
                <button id="filtrar-boton" class="btn btn-primary btn-sm">Filtrar</button>
                <a href="@Url.Action("ListDocente", "Teacher")" class="btn btn-sm btn-primary">Refresh</a>
            </div>
        </form>
    </div>
</div>
<br />
<a href="@Url.Action("AddEditDocente", "Teacher")" id="nuevo-boton" class="btn btn-success btn-sm pull-right">Nuevo Docente</a>
<br />
<hr />
<table class="table table-striped table-responsive table-condensed">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Fecha Nacimiento</th>
            <th>Descripcion</th>
            <th>Sexo</th>
            <th>Facultad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var docente in Model.LstDocente)
        {
            <tr>
                <td>@docente.Nombre</td>
                <td>@docente.Apellido</td>
                <td>@docente.FechaNacimiento.ToShortDateString()</td>
                <td>@docente.Descripcion</td>
                <td>@docente.Sexo</td>
                <td>@docente.Facultad.Nombre</td>
                <td>
                    <a id="edit-button" class="btn btn-sm btn-primary" href="@Url.Action("AddEditDocente", "Teacher", new { @DocenteId = docente.Id })">Editar</a>
                    <a id="delete-button" class="btn btn-sm btn-danger anchorDetail" data-id="@docente.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id='myModal' class="modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>

@section Scripts{

    <script>
    $(function () {
        $(".anchorDetail").click(function () {
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: 'GET',
                url: '@Url.Action("_DeleteDocente", "Teacher")',
                contentType: "application/json; charset=utf-8",
                data: { 'DocenteId': id },
                datatype: 'json',
                success: function (data) {
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');

                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });
        $("#closbtn").click(function () {
            $('#myModal').modal('hide');
        });
    });

    </script>
}