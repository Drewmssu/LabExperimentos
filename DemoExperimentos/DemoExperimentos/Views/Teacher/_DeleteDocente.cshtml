@model DemoExperimentos.ViewModels.Teacher.DeleteDocenteViewModel
@{
    Layout = null;
}

<div id="@ViewBag.GUID">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4>Eliminar Docente</h4>
    </div>

    <div class="modal-body">
        <form id="deleteForm" method="post" action="@Url.Action("DeleteDocente", "Teacher")">
            @Html.HiddenFor(x => x.DocenteId)
            <h5>¿Está seguro de eliminar este docente?</h5>
            <button type="submit" class="hide" id="deleteBtn"></button>
            <hr />
            <div style="margin-left:375px;">
                <button id="btnConfirmar" class="btn btn-primary">Confirmar</button>
                <button class="btn btn-default" data-dismiss="modal"> Cerrar</button>
            </div>
        </form>
    </div>

</div>
