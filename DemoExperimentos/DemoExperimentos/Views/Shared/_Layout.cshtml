<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DemoExperimentos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">Demo Experimentos</div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["UserId"] != null)
                    {
                        <li>@Html.ActionLink("Docentes", "ListDocente", "Teacher")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserId"] != null)
                    {
                        <li><a href="@Url.Action("Logout", "Login", "Login")">Cerrar Sesión</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{ Html.RenderPartial("_FlashMessage"); }
        @RenderBody()
    </div>
    <hr />
    <footer>
        <p style="margin-left:100px;">&copy; @DateTime.Now.Year - Demo Experimentos</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
